<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.employee.try(:name) %>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= will_paginate @departments %>
  </tbody>
</table>

<br>

<%= link_to 'NEW', new_department_path, :class => "btn btn-primary btn-lg" %>
